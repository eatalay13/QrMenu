@model LoginViewModel
@inject SignInManager<User> SignInManager

@{ ViewData["Title"] = "Giriş Yap"; }


<div class="login-box">
    <div class="logo">
        <a href="javascript:void(0);">EA<b>B2B</b></a>
        <small>Admin BootStrap Based - Material Design</small>
    </div>
    <div class="card">
        <div class="body">
            <form id="sign_in" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="msg">Sign in to start your session</div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">person</i>
                    </span>
                    <div class="form-line">
                        <input asp-for="Email" class="form-control" required autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        <input asp-for="Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8 p-t-5">
                        <input type="checkbox" asp-for="RememberMe" class="filled-in chk-col-pink">
                        <label asp-for="RememberMe"></label>
                    </div>
                    <div class="col-xs-4">
                        <button class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button>
                    </div>
                </div>
                <div class="row m-t-15 m-b--20">
                    <div class="col-xs-6">
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register Now!</a>
                    </div>
                    <div class="col-xs-6 align-right">
                        <a asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>